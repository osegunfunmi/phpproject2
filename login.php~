<?php
session_start();
include("db.php");
$err = "";
?>
<?php
if(isset($_POST['submit'])){
if(empty($_POST['username'])){
$err = "Enter Username";
}
	
if(empty($_POST['password'])){
$err = "Enter password";
}

if(empty($err)){

$svcno = $_POST['username'];
$password = $_POST['password'];

$sql = mysql_query("SELECT * FROM users WHERE username='$svcno' AND password='$password'");
if(mysql_num_rows($sql) > '0'){
$g = mysql_fetch_array($sql);
$_SESSION['id'] = $g['serial'];
$_SESSION['username'] = $g['username'];
$_SESSION['fullname'] = $g['fullname'];

header("location:dashboard.php");
//exit;
}else{
$err = "invalid login credentials";
}
}
}
